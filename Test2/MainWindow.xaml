<Window x:Class="Test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TextBox_Trace" IsReadOnly="True" Grid.Row="0" Grid.Column="0"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button x:Name="Button_Test" Content="Button_Test"  Click="Button_btn_Click" Margin="2" />
            <Button x:Name="Button_Close" Content="Button_Close"  Click="Button_btn_Click" Margin="2"/>
            <Button x:Name="Button_Connect" Content="Button_Connect"  Click="Button_btn_Click" Margin="2"/>
            <Button x:Name="Button_Send" Content="Button_Send"  Click="Button_btn_Click" Margin="2"/>

        </StackPanel>

        <Image Grid.Row="0" Grid.Column="1" Name="Image_Test"/>
    </Grid>
</Window>
